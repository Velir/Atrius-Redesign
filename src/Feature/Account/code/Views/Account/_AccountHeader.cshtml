@using AtriusHealth.Feature.Account.Models
@using AtriusHealth.Foundation.Dictionary.Repositories
@using AtriusHealth.Foundation.Theme.Extensions
@model AtriusHealth.Feature.Account.Models.MemberProfileBaseModel

<div class="account-header">
    <div class="account-header__titles">
        <h1 class="account-header__title subheader1">@Model.Title</h1>
        <span class="account-header__subtitle">@Model.Description</span>
    </div>
    <div class="account-buttons">
        @if (Model.GetType() == typeof(MemberProfileModel))
        {
            @Html.Partial("_AccountHeaderButtonsProfile", Model)
        }
        else
        {
            @Html.Partial("_AccountHeaderButtons", Model)
        }
    </div>
</div>
@Html.Partial("_AccountMessage", Model)
