<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
	<sitecore>
    <services>
      <configurator type="AtriusHealth.Foundation.Performance.DependencyInjection.Registrar, AtriusHealth.Foundation.Performance" />
    </services>
    <!-- Site Cache Clear -->
    <events>
      <event name="publish:end">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>
      <event name="publish:end:remote">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>

      <event name="indexing:end">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>
      <event name="indexing:end:remote">
        <!-- Cache clearing handler -->
        <handler type="Jabberwocky.Core.Caching.SiteCache, Jabberwocky.Core" method="EmptyCacheHandler"/>
      </event>
    </events>
	</sitecore>
</configuration>
