{
  "source": ["./frontend/design-tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "tokens-scss",
      "buildPath": "./frontend/scss/variables/",
      "files": [{
        "destination": "_props-generated.scss",
        "format": "css/variables",
        "outputReferences": true
      }]
    },
    "css": {
      "buildPath": "./frontend/scss/base/",
      "transformGroup":"scss",
      "files": [{
        "destination": "_utility.scss",
         "format": "utilityClass",
         "outputReferences": true
      }]
    }
  }
} 